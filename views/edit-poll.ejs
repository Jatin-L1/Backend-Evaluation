<%- include('partials/header') %>
<style>
    /* Universal Reset */
* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    font-family: 'Inter', sans-serif;
}

/* Admin Container */
.admin-container {
    max-width: 600px;
    margin: 80px auto;
    background-color: #111;
    padding: 40px;
    border-radius: 16px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.5);
    color: #f5f5f5;
    animation: fadeIn 0.6s ease-out;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.admin-container:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.6);
}

/* Admin Title */
.admin-title {
    font-size: 24px;
    text-transform: uppercase;
    letter-spacing: 1.2px;
    margin-bottom: 20px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    padding-bottom: 10px;
    color: #fff;
}

/* Form Group */
.form-group {
    margin-bottom: 20px;
    display: flex;
    flex-direction: column;
    gap: 8px;
}

/* Labels */
.form-label {
    font-weight: bold;
    font-size: 14px;
    color: #e0e0e0;
    text-transform: uppercase;
    letter-spacing: 1px;
}

/* Input Fields */
.form-control {
    width: 100%;
    padding: 12px;
    font-size: 14px;
    background-color: #1a1a1a;
    color: #f0f0f0;
    border: 1px solid #333;
    border-radius: 8px;
    transition: all 0.3s ease;
}

.form-control:focus {
    border-color: #f5f5f5;
    background-color: #222;
    outline: none;
}

/* Checkbox */
input[type="checkbox"] {
    appearance: none;
    width: 18px;
    height: 18px;
    background-color: #1a1a1a;
    border: 1px solid #555;
    border-radius: 3px;
    position: relative;
    cursor: pointer;
    transition: all 0.3s ease;
}

input[type="checkbox"]:checked {
    background-color: #f5f5f5;
}

input[type="checkbox"]:checked::after {
    content: 'âœ“';
    font-size: 14px;
    color: #111;
    font-weight: bold;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

/* Buttons */
.admin-btn {
    padding: 14px;
    font-size: 14px;
    font-weight: bold;
    background-color: #000;
    color: #f5f5f5;
    border: 1px solid #444;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.admin-btn:hover {
    background-color: #222;
    color: #fff;
    transform: scale(1.05);
    box-shadow: 0 0 12px rgba(255, 255, 255, 0.2);
}

/* Options Container (for dynamic inputs) */
#options-container {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

/* Newly Added Options Animation */
#options-container input {
    animation: fadeInOption 0.4s ease forwards;
}

/* Input Placeholder */
.form-control::placeholder {
    color: rgba(200, 200, 200, 0.5);
}

/* Animations */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes fadeInOption {
    from {
        opacity: 0;
        transform: translateY(-5px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Mobile Friendly */
@media (max-width: 640px) {
    .admin-container {
        padding: 25px;
    }

    .admin-title {
        font-size: 20px;
    }

    .admin-btn {
        padding: 12px;
    }
}

</style>

<main class="admin-container">
    <h1 class="admin-title">Edit Poll</h1>
    <form action="/admin/edit/<%= poll._id %>" method="POST" class="admin-form" style="background-color: rgb(37, 35, 35);">
        <div class="form-group">
            <label for="title" class="form-label">Title</label>
            <input type="text" id="title" name="title" class="form-control" value="<%= poll.title %>" required>
        </div>
        <div class="form-group">
            <label for="options" class="form-label">Options</label>
            <div id="options-container">
                <% poll.options.forEach((option, index) => { %>
                    <input type="text" name="options" class="form-control" value="<%= option.text %>" required>
                <% }) %>
            </div>
            <button type="button" id="add-option-btn" class="admin-btn">Add Option</button>
        </div>
        <div class="form-group">
            <label for="isAnonymous" class="form-label">Anonymous Voting</label>
            <input type="checkbox" id="isAnonymous" name="isAnonymous" <%= poll.isAnonymous ? 'checked' : '' %>>
        </div>
        <div class="form-group">
            <label for="duration" class="form-label">Duration (minutes)</label>
            <input type="number" id="duration" name="duration" class="form-control" required>
        </div>
        <button type="submit" class="admin-btn">Update Poll</button>
    </form>
</main>

<%- include('partials/footer') %>

<script>
    document.getElementById('add-option-btn').addEventListener('click', function() {
        const optionsContainer = document.getElementById('options-container');
        const newOptionInput = document.createElement('input');
        newOptionInput.type = 'text';
        newOptionInput.name = 'options';
        newOptionInput.className = 'form-control';
        newOptionInput.required = true;
        optionsContainer.appendChild(newOptionInput);
    });
</script>